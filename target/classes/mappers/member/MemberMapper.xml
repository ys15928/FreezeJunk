<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.care.root.mybatis.MemberMapper"> 

	<resultMap id="member" type="com.care.root.member.dto.MemberDTO">
		<id property="id" column="id"></id>
		<result property="pwd" column="pwd"/>
		<result property="name" column="name"/>
		<result property="email" column="email"/>
	</resultMap>

	<select id="idcheck" resultMap="member">
		select * from JUNK_USER where id=#{id}
	</select>
	<select id="emailcheck" resultMap="member">
		select * from JUNK_USER where email=#{email}
	</select>

<insert id="register">
	insert into JUNK_USER values(#{id}, #{pwd}, #{name}, #{email})
</insert>

<select id="loginChk" resultMap="member">
	select * from JUNK_USER where id=#{id} and pwd=#{pwd}
</select>

<select id="searchId" resultType="String">
	select * from JUNK_USER where name = #{name} and email = #{email}
</select>

<update id="searchPwd">
	update JUNK_USER set pwd = #{key} where id = #{id} and email = #{email}
</update>

<select id="mypage" resultMap="member">
	select * from JUNK_USER where id=#{id}
</select>

<update id="myupdate">
	update JUNK_USER set pwd = #{pwd,jdbcType=VARCHAR}, name = #{name,jdbcType=VARCHAR}, email = #{email,jdbcType=VARCHAR} where id = #{id,jdbcType=VARCHAR}
</update>

<select id="getName" resultType="string">
	select name from JUNK_USER where id=#{id}
</select>

<select id="userList" resultMap="member">
	select * from JUNK_USER where id like '%' || #{search} || '%'
</select>

<delete id="iddelete">
	delete * from JUNK_USER where id=#{id}
</delete>

</mapper>




